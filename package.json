{
  "name": "community-manager-bot",
  "version": "1.0.0",
  "description": "A slack bot to help manage LJOSC community's slack channel.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --transpile-only -- src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc && tsc-alias",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,tsx,json,md}'",
    "format:check": "prettier --check 'src/**/*.{js,ts,tsx,json,md}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LJOSC/Community-Manager-Bot.git"
  },
  "author": "LJOSC Community",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LJOSC/Community-Manager-Bot/issues"
  },
  "homepage": "https://github.com/LJOSC/Community-Manager-Bot#readme",
  "dependencies": {
    "@slack/bolt": "^3.18.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,json,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
